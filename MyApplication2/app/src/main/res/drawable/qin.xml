<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!--
        定义一个从上到下的线性渐变来模拟晴朗的天空。
        你可以调整颜色来获得你想要的效果。
    -->
    <gradient
        android:type="linear"
        android:angle="270"               /> <!-- angle=270 表示从顶部到底部 -->


    <gradient
        android:type="linear"
        android:angle="270"
        android:startColor="#2064CA"
        android:endColor="#2C76B3"
        />


</shape>