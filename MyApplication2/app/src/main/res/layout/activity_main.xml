<?xml version="1.0" encoding="utf-8"?>
<androidx.swiperefreshlayout.widget.SwipeRefreshLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/swipe_refresh_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@drawable/qin">


    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp">


            <TextView
                android:id="@+id/Chinatime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@id/diqu_1"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="37dp"
                android:layout_marginEnd="15dp"
                android:gravity="center_vertical|end"
                android:padding="5dp"
                android:text="MM-dd HH:mm"
                android:textColor="@android:color/white"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/diqu_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="16dp"
                android:layout_marginTop="31dp"
                android:clickable="true"
                android:focusable="true"
                android:gravity="center_vertical"
                android:padding="5dp"
                android:text="地区"
                android:textColor="@android:color/white"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_temperature"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/diqu_1"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"
                android:gravity="center"
                android:text="C°"
                android:textSize="80sp"
                android:textStyle="italic"
                android:textColor="@android:color/white" /> // Set text color to white

            // Current Weather Details (Below Temperature)
            <LinearLayout
                android:id="@+id/ll_current_details"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_below="@id/tv_temperature"
                android:layout_marginTop="5dp"
                android:gravity="center">

                // Current Weather Icon
                <ImageView
                    android:id="@+id/iv_current_weather_icon"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginEnd="8dp"
                    android:src="@drawable/qing"
                    android:contentDescription="当前天气图标"/>

                // Current Weather Text
                <TextView
                    android:id="@+id/tv_weather"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="天气"
                    android:textSize="20sp"
                    android:textColor="@android:color/white" /> // Set text color to white

                // Current Humidity
                <TextView
                    android:id="@+id/tv_humidity"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15dp"
                    android:text="%rh"
                    android:textSize="16sp"
                    android:textColor="@android:color/white" /> // Set text color to white

                // Today's High/Low Temp
                <TextView
                    android:id="@+id/tempMax_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15dp"
                    android:text="高/低温"
                    android:textSize="16sp"
                    android:textColor="@android:color/white" /> // Set text color to white

            </LinearLayout>

            // Hourly Forecast
            <HorizontalScrollView
                android:id="@+id/hsv_hourly_weather"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/ll_current_details"
                android:layout_marginTop="20dp"
                android:background="@drawable/edittext"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:scrollbars="none">
                <LinearLayout
                    android:id="@+id/ll_hourly_weather"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="horizontal" />
                // Text color for items inside ll_hourly_weather needs to be set in Java
            </HorizontalScrollView>


            <LinearLayout
                android:id="@+id/ll_weekdays"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/hsv_hourly_weather"
                android:layout_marginTop="15dp"
                android:background="@drawable/edittext"
                android:orientation="vertical"
                android:paddingStart="10dp"
                android:paddingEnd="10dp">

                // Day 1
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingVertical="6dp">

                    <TextView
                        android:id="@+id/left_week1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.2"
                        android:text="日期1"
                        android:textColor="@android:color/white" /> // Set text color to white

                    // Inner LinearLayout to group icon and text
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center_horizontal|center_vertical"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/iv_forecast_icon_1"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:layout_marginEnd="4dp"
                            android:contentDescription="天气图标1"
                            android:src="@drawable/qing" />

                        <TextView
                            android:id="@+id/weilaitq_1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="start|center_vertical"
                            android:text="天气1"
                            android:textColor="@android:color/white" /> // Set text color to white
                    </LinearLayout>

                    <TextView
                        android:id="@+id/right_week1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="end|center_vertical"
                        android:text="温度1"
                        android:textColor="@android:color/white" /> // Set text color to white
                </LinearLayout>

                // Day 2 (Apply similar structure)
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingVertical="6dp">

                    <TextView
                        android:id="@+id/left_week2"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.2"
                        android:text="日期2"
                        android:textColor="@android:color/white" /> // Set text color to white

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center_horizontal|center_vertical"
                        android:orientation="horizontal">
                        <ImageView
                            android:id="@+id/iv_forecast_icon_2"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:layout_marginEnd="4dp"
                            android:contentDescription="天气图标2"
                            android:src="@drawable/qing" />
                        <TextView
                            android:id="@+id/weilaitq_2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="start|center_vertical"
                            android:text="天气2"
                            android:textColor="@android:color/white" /> // Set text color to white
                    </LinearLayout>

                    <TextView
                        android:id="@+id/right_week2"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="end|center_vertical"
                        android:text="温度2"
                        android:textColor="@android:color/white" /> // Set text color to white
                </LinearLayout>

                // Day 3 (Apply similar structure)
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingVertical="6dp">
                    <TextView
                        android:id="@+id/left_week3"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.2"
                        android:text="日期3"
                        android:textColor="@android:color/white" /> // Set text color to white
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center_horizontal|center_vertical"
                        android:orientation="horizontal">
                        <ImageView
                            android:id="@+id/iv_forecast_icon_3"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:layout_marginEnd="4dp"
                            android:contentDescription="天气图标3"
                            android:src="@drawable/qing" />
                        <TextView
                            android:id="@+id/weilaitq_3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="start|center_vertical"
                            android:text="天气3"
                            android:textColor="@android:color/white" /> // Set text color to white
                    </LinearLayout>
                    <TextView
                        android:id="@+id/right_week3"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="end|center_vertical"
                        android:text="温度3"
                        android:textColor="@android:color/white" /> // Set text color to white
                </LinearLayout>

                // Day 4 (Apply similar structure)
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingVertical="6dp">
                    <TextView
                        android:id="@+id/left_week4"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.2"
                        android:text="日期4"
                        android:textColor="@android:color/white" /> // Set text color to white
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center_horizontal|center_vertical"
                        android:orientation="horizontal">
                        <ImageView
                            android:id="@+id/iv_forecast_icon_4"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:layout_marginEnd="4dp"
                            android:contentDescription="天气图标4"
                            android:src="@drawable/qing" />
                        <TextView
                            android:id="@+id/weilaitq_4"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="start|center_vertical"
                            android:text="天气4"
                            android:textColor="@android:color/white" /> // Set text color to white
                    </LinearLayout>
                    <TextView
                        android:id="@+id/right_week4"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="end|center_vertical"
                        android:text="温度4"
                        android:textColor="@android:color/white" /> // Set text color to white
                </LinearLayout>

                // Day 5 (Apply similar structure)
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingVertical="6dp">
                    <TextView
                        android:id="@+id/left_week5"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.2"
                        android:text="日期5"
                        android:textColor="@android:color/white" /> // Set text color to white
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center_horizontal|center_vertical"
                        android:orientation="horizontal">
                        <ImageView
                            android:id="@+id/iv_forecast_icon_5"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:layout_marginEnd="4dp"
                            android:contentDescription="天气图标5"
                            android:src="@drawable/qing" />
                        <TextView
                            android:id="@+id/weilaitq_5"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="start|center_vertical"
                            android:text="天气5"
                            android:textColor="@android:color/white" /> // Set text color to white
                    </LinearLayout>
                    <TextView
                        android:id="@+id/right_week5"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="end|center_vertical"
                        android:text="温度5"
                        android:textColor="@android:color/white" /> // Set text color to white
                </LinearLayout>

                // Day 6 (Apply similar structure)
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingVertical="6dp">
                    <TextView
                        android:id="@+id/left_week6"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.2"
                        android:text="日期6"
                        android:textColor="@android:color/white" /> // Set text color to white
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center_horizontal|center_vertical"
                        android:orientation="horizontal">
                        <ImageView
                            android:id="@+id/iv_forecast_icon_6"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:layout_marginEnd="4dp"
                            android:contentDescription="天气图标6"
                            android:src="@drawable/qing" />
                        <TextView
                            android:id="@+id/weilaitq_6"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="start|center_vertical"
                            android:text="天气6"
                            android:textColor="@android:color/white" /> // Set text color to white
                    </LinearLayout>
                    <TextView
                        android:id="@+id/right_week6"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="end|center_vertical"
                        android:text="温度6"
                        android:textColor="@android:color/white" /> // Set text color to white
                </LinearLayout>

                // Day 7 (Apply similar structure)
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingVertical="6dp">
                    <TextView
                        android:id="@+id/left_week7"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.2"
                        android:text="日期7"
                        android:textColor="@android:color/white" /> // Set text color to white
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center_horizontal|center_vertical"
                        android:orientation="horizontal">
                        <ImageView
                            android:id="@+id/iv_forecast_icon_7"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:layout_marginEnd="4dp"
                            android:contentDescription="天气图标7"
                            android:src="@drawable/qing" />
                        <TextView
                            android:id="@+id/weilaitq_7"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="start|center_vertical"
                            android:text="天气7"
                            android:textColor="@android:color/white" /> // Set text color to white
                    </LinearLayout>
                    <TextView
                        android:id="@+id/right_week7"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="end|center_vertical"
                        android:text="温度7"
                        android:textColor="@android:color/white" /> // Set text color to white
                </LinearLayout>

            </LinearLayout>


            <com.example.myapplication.WeeklyChartView
                android:id="@+id/weekly_chart_view"
                android:layout_width="match_parent"
                android:layout_height="220dp"
                android:layout_below="@id/ll_weekdays"
                android:layout_marginTop="20dp"
                android:background="@drawable/edittext"/>


            // Update Time
            <TextView
                android:id="@+id/text_4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/weekly_chart_view"
                android:layout_alignParentBottom="true"
                android:gravity="center"
                android:paddingBottom="10dp"
                android:text="更新时间"
                android:textSize="12sp"
                android:textColor="@android:color/white" />

        </RelativeLayout>
    </androidx.core.widget.NestedScrollView>
</androidx.swiperefreshlayout.widget.SwipeRefreshLayout>